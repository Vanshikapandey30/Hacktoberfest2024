#include <iostream>
using namespace std;

int main() {
    string str, reversedStr;
    cout << "Enter a string: ";
    cin >> str;

    int n = str.length();

    // Reverse by appending characters to a new string
    for (int i = n - 1; i >= 0; i--) {
        reversedStr += str[i];
    }

    cout << "Reversed string: " << reversedStr << endl;
    return 0;
}
