    font-weight: bold;
    border-radius: 3px;
}
  .priceTag
  {
    
    margin-right:5px;
  }
  .price-range
  {
    justify-content:center;
  }
.image-row {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
  margin-bottom:20px;
}
.image-wrapper {
  width: 100%;
  height: 100%;
}
.image-content {
  position: relative;
  overflow: hidden;
  margin: 20px;
}

.image-wrapper {
  width: 100%;
  height: 100%;
}

.zoom-image {
  transition: transform 0.5s;
  width: 100%;
  height: 100%;
  object-fit: cover;
}

 .overlay {
  position: absolute;
 
  left: 0;
  bottom: 0;
  right: 0;
  background-color: rgba(0, 0, 0, 0.5);
  color: white;
  opacity: 1;
  transition: opacity 0.5s;
  display: flex;
  justify-content: center;
  align-items: center;
}

.image-content:hover .zoom-image {
  transform: scale(1.2);
}
 
{% endstylesheet %}

{% javascript %}
<script>
  document.addEventListener('DOMContentLoaded', function() {
    var products = [
      "{{ section.settings.product1.id }}",
      "{{ section.settings.product2.id }}",
      "{{ section.settings.product3.id }}"
    ];

    products.forEach(function(productId, index) {
      fetch('/products/' + productId + '.json')
        .then(response => response.json())
        .then(data => {
          var priceRange = data.product.variants.reduce((acc, curr) => {
            acc.push(curr.price);
            return acc;
          }, []);

          var minPrice = Math.min(...priceRange);
          var maxPrice = Math.max(...priceRange);
          document.getElementById('price-range-' + (index + 1)).innerText = 'Price Range: $' + minPrice + ' - $' + maxPrice;

          // Toggle zoomed class after updating price range
          var imageContainer = document.querySelectorAll('.image-container')[index];
          imageContainer.addEventListener('click', function() {
            this.classList.toggle('zoomed');
          });
        })
        .catch(error => console.error('Error fetching product data:', error));
    });
  });
</script>

{% endjavascript %}
